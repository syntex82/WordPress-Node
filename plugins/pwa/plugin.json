{
  "name": "PWA Plugin",
  "version": "1.0.0",
  "author": "NodePress",
  "description": "Progressive Web App plugin that enables offline access, push notifications, and native app-like installation for your NodePress site",
  "entry": "index.js",
  "hooks": ["onActivate", "onDeactivate", "registerRoutes"],
  "features": [
    "Web App Manifest generation",
    "Service Worker with offline caching",
    "Push notification support",
    "App installation prompt",
    "Offline page fallback",
    "Asset caching strategies",
    "Background sync support",
    "Customizable theme colors",
    "Icon generation support"
  ],
  "settings": {
    "appName": "NodePress",
    "shortName": "NodePress",
    "description": "Modern NodePress CMS",
    "themeColor": "#4f46e5",
    "backgroundColor": "#1e293b",
    "display": "standalone",
    "orientation": "any",
    "startUrl": "/",
    "offlineEnabled": true,
    "pushNotifications": false,
    "cacheStrategy": "networkFirst"
  },
  "requirements": {
    "minVersion": "1.0.0"
  }
}

