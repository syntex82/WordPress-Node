{{> header}}

<div style="max-width: 1200px; margin: 0 auto; padding: 60px;">
  <div style="display: grid; grid-template-columns: 1fr 300px; gap: 3rem;">
    <article>
      <header style="margin-bottom: 2rem;">
        <h1 style="font-size: 40px; margin-bottom: 1rem;">{{post.title}}</h1>
        
        <div style="display: flex; align-items: center; gap: 2rem; color: #6B7280; font-size: 14px; padding-bottom: 1rem; border-bottom: 1px solid #E5E7EB;">
          <div style="display: flex; align-items: center; gap: 0.5rem;">
            <img src="{{post.author.avatar}}" alt="{{post.author.name}}" style="width: 32px; height: 32px; border-radius: 50%; object-fit: cover;">
            <span>{{post.author.name}}</span>
          </div>
          <span>{{formatDate post.publishedAt}}</span>
          <span>{{post.readTime}} min read</span>
        </div>
      </header>

      {{#if post.featuredImage}}
        <img src="{{post.featuredImage}}" alt="{{post.title}}" style="
          width: 100%;
          height: 400px;
          object-fit: cover;
          border-radius: 8px;
          margin-bottom: 2rem;
        ">
      {{/if}}

      <div style="
        font-size: 16px;
        line-height: 1.8;
        color: #111827;
        margin-bottom: 2rem;
      ">
        {{{post.content}}}
      </div>

      {{#if post.tags}}
        <div style="margin-bottom: 2rem; padding-top: 1rem; border-top: 1px solid #E5E7EB;">
          <strong style="display: block; margin-bottom: 1rem;">Tags:</strong>
          <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
            {{#each post.tags}}
              <a href="/blog?tag={{this}}" style="
                display: inline-block;
                padding: 6px 12px;
                background: #F9FAFB;
                color: #1E40AF;
                text-decoration: none;
                border-radius: 4px;
                font-size: 14px;
                transition: all 0.3s ease;
              " onmouseover="this.style.background='#1E40AF'; this.style.color='white'" onmouseout="this.style.background='#F9FAFB'; this.style.color='#1E40AF'">
                {{this}}
              </a>
            {{/each}}
          </div>
        </div>
      {{/if}}
    </article>

    <!-- Sidebar -->
    <aside style="background: #F9FAFB; padding: 1.5rem; border-radius: 8px; height: fit-content; border: 1px solid #E5E7EB;">
      <h3 style="margin-bottom: 1rem;">Recent Articles</h3>
      <div style="display: flex; flex-direction: column; gap: 1rem;">
        {{#each recentPosts}}
          <a href="/blog/{{this.slug}}" style="
            text-decoration: none;
            padding: 0.75rem;
            background: white;
            border-radius: 4px;
            color: #1E40AF;
            font-size: 14px;
            transition: all 0.3s ease;
            border: 1px solid #E5E7EB;
          " onmouseover="this.style.background='#E5E7EB'" onmouseout="this.style.background='white'">
            {{truncate this.title 50}}
          </a>
        {{/each}}
      </div>
    </aside>
  </div>
</div>

{{> footer}}

