<!-- Featured Posts -->
<section class="featured-posts">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Latest Posts</h2>
      <p class="section-subtitle">Discover our most recent articles and insights</p>
    </div>
    
    <div class="posts-grid">
      {{#each posts}}
      <article class="post-card">
        {{#if featuredImage}}
        <div class="post-image">
          <img src="{{featuredImage}}" alt="{{title}}" loading="lazy">
        </div>
        {{/if}}
        
        <div class="post-content">
          <div class="post-meta">
            <time class="post-date" datetime="{{createdAt}}">
              {{formatDate createdAt}}
            </time>
            {{#if author}}
            <span class="post-author">by {{author.name}}</span>
            {{/if}}
          </div>
          
          <h3 class="post-title">
            <a href="/post/{{slug}}">{{title}}</a>
          </h3>

          <p class="post-excerpt">{{excerpt}}</p>

          <a href="/post/{{slug}}" class="read-more">
            Read More
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </article>
      {{/each}}
    </div>
    
    {{#if posts.length}}
    <div class="section-footer">
      <a href="/blog" class="btn btn-outline">View All Posts</a>
    </div>
    {{else}}
    <div class="empty-state">
      <p>No posts yet. Check back soon!</p>
    </div>
    {{/if}}
  </div>
</section>

<!-- Newsletter Section -->
