{{> header}}

<article class="single-post">
  <div class="container-narrow">
    <!-- Post Header -->
    <header class="post-header">
      <div class="post-meta-top">
        <time class="post-date" datetime="{{post.createdAt}}">
          {{formatDate post.createdAt}}
        </time>
        {{#if post.author}}
        <span class="post-author">by {{post.author.name}}</span>
        {{/if}}
      </div>
      
      <h1 class="post-title-single">{{post.title}}</h1>
      
      {{#if post.excerpt}}
      <p class="post-excerpt-single">{{post.excerpt}}</p>
      {{/if}}
    </header>

    <!-- Featured Image -->
    {{#if post.featuredImage}}
    <div class="post-featured-image">
      <img src="{{post.featuredImage}}" alt="{{post.title}}">
    </div>
    {{/if}}

    <!-- Post Content -->
    <div class="post-body">
      {{{post.content}}}
    </div>

    <!-- Post Footer -->
    <footer class="post-footer">
      <div class="post-tags">
        {{#if post.tags}}
        <span class="tags-label">Tags:</span>
        {{#each post.tags}}
        <a href="/tag/{{this}}" class="tag">{{this}}</a>
        {{/each}}
        {{/if}}
      </div>
      
      <div class="post-share">
        <span class="share-label">Share:</span>
        <a href="https://twitter.com/intent/tweet?url={{site.url}}/posts/{{post.slug}}&text={{post.title}}" 
           target="_blank" 
           class="share-btn"
           aria-label="Share on Twitter">
          <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path></svg>
        </a>
        <a href="https://www.facebook.com/sharer/sharer.php?u={{site.url}}/posts/{{post.slug}}" 
           target="_blank" 
           class="share-btn"
           aria-label="Share on Facebook">
          <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
        </a>
        <a href="https://www.linkedin.com/shareArticle?mini=true&url={{site.url}}/posts/{{post.slug}}&title={{post.title}}" 
           target="_blank" 
           class="share-btn"
           aria-label="Share on LinkedIn">
          <svg width="18" height="18" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
        </a>
      </div>
    </footer>

    <!-- Author Bio -->
    {{#if post.author}}
    <div class="author-bio">
      <div class="author-avatar">
        {{#if post.author.avatar}}
        <img src="{{post.author.avatar}}" alt="{{post.author.name}}">
        {{else}}
        <div class="avatar-placeholder">{{substring post.author.name 0 1}}</div>
        {{/if}}
      </div>
      <div class="author-info">
        <h3 class="author-name">{{post.author.name}}</h3>
        {{#if post.author.bio}}
        <p class="author-description">{{post.author.bio}}</p>
        {{/if}}
      </div>
    </div>
    {{/if}}
  </div>
</article>

{{> footer}}

