{{> header}}

<!-- Profile Hero -->
<section class="profile-hero">
  <div class="profile-cover" style="background: {{#if profile.coverImage}}url('{{profile.coverImage}}'){{else}}linear-gradient(135deg, #667eea 0%, #764ba2 100%){{/if}}; background-size: cover; background-position: center;">
    <div class="profile-cover-overlay"></div>
  </div>
  
  <div class="container">
    <div class="profile-header">
      <div class="profile-avatar-wrapper">
        {{#if profile.avatar}}
        <img src="{{profile.avatar}}" alt="{{profile.name}}" class="profile-avatar">
        {{else}}
        <div class="profile-avatar profile-avatar-placeholder">
          <span>{{substring profile.name 0 1}}</span>
        </div>
        {{/if}}
      </div>
      
      <div class="profile-info">
        <h1 class="profile-name">{{profile.name}}</h1>
        {{#if profile.headline}}
        <p class="profile-headline">{{profile.headline}}</p>
        {{/if}}
        
        <div class="profile-meta">
          {{#if profile.location}}
          <span class="profile-meta-item">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
            {{profile.location}}
          </span>
          {{/if}}
          {{#if profile.company}}
          <span class="profile-meta-item">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            {{profile.company}}
          </span>
          {{/if}}
          <span class="profile-meta-item">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
            Joined {{formatDate profile.createdAt}}
          </span>
        </div>
      </div>
      
      <div class="profile-actions">
        {{#if isOwnProfile}}
        <a href="/admin/profile" class="btn btn-primary">Edit Profile</a>
        {{else if isLoggedIn}}
        <button class="btn {{#if isFollowing}}btn-secondary{{else}}btn-primary{{/if}}" onclick="toggleFollow('{{profile.id}}')">
          {{#if isFollowing}}Following{{else}}Follow{{/if}}
        </button>
        {{/if}}
      </div>
    </div>
  </div>
</section>

<!-- Profile Stats -->
<section class="profile-stats">
  <div class="container">
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-value">{{profile.followersCount}}</div>
        <div class="stat-label">Followers</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">{{profile.followingCount}}</div>
        <div class="stat-label">Following</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">{{stats.postsPublished}}</div>
        <div class="stat-label">Posts</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">{{stats.coursesCompleted}}</div>
        <div class="stat-label">Courses</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">{{stats.certificatesEarned}}</div>
        <div class="stat-label">Certificates</div>
      </div>
    </div>
  </div>
</section>

<!-- Profile Content -->
<section class="profile-content">
  <div class="container">
    <div class="profile-grid">
      <!-- Main Content -->
      <div class="profile-main">
        {{#if profile.bio}}
        <div class="profile-card">
          <h2 class="profile-card-title">About</h2>
          <p class="profile-bio">{{profile.bio}}</p>
        </div>
        {{/if}}
        
        {{#if profile.skills.length}}
        <div class="profile-card">
          <h2 class="profile-card-title">Skills</h2>
          <div class="skills-list">
            {{#each profile.skills}}
            <span class="skill-tag">{{this}}</span>
            {{/each}}
          </div>
        </div>
        {{/if}}
        
        {{#if posts.length}}
        <div class="profile-card">
          <h2 class="profile-card-title">Recent Posts</h2>
          <div class="profile-posts-grid">
            {{#each posts}}
            <a href="/post/{{slug}}" class="profile-post-item">
              <h3>{{title}}</h3>
              <span class="post-date">{{formatDate createdAt}}</span>
            </a>
            {{/each}}
          </div>
        </div>
        {{/if}}
        
        {{#if courses.length}}
        <div class="profile-card">
          <h2 class="profile-card-title">Courses</h2>
          <div class="profile-courses-grid">
            {{#each courses}}
            <a href="/courses/{{slug}}" class="profile-course-item">
              <div class="course-thumb" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                {{#if thumbnail}}<img src="{{thumbnail}}" alt="{{title}}">{{/if}}
              </div>
              <div class="course-info">
                <h3>{{title}}</h3>
                <p>{{shortDescription}}</p>
              </div>
            </a>
            {{/each}}
          </div>
        </div>
        {{/if}}
      </div>
      
      <!-- Sidebar -->
      <div class="profile-sidebar">
        {{#if profile.socialLinks}}
        <div class="profile-card">
          <h2 class="profile-card-title">Connect</h2>
          <div class="social-links">
            {{#if profile.socialLinks.twitter}}
            <a href="{{profile.socialLinks.twitter}}" target="_blank" rel="noopener" class="social-link twitter">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
            </a>
            {{/if}}
            {{#if profile.socialLinks.linkedin}}
            <a href="{{profile.socialLinks.linkedin}}" target="_blank" rel="noopener" class="social-link linkedin">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            </a>
            {{/if}}
            {{#if profile.socialLinks.github}}
            <a href="{{profile.socialLinks.github}}" target="_blank" rel="noopener" class="social-link github">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
            </a>
            {{/if}}
            {{#if profile.socialLinks.youtube}}
            <a href="{{profile.socialLinks.youtube}}" target="_blank" rel="noopener" class="social-link youtube">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
            </a>
            {{/if}}
          </div>
          {{#if profile.website}}
          <a href="{{profile.website}}" target="_blank" rel="noopener" class="profile-website">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
            {{profile.website}}
          </a>
          {{/if}}
        </div>
        {{/if}}
        
        {{#if badges.length}}
        <div class="profile-card">
          <h2 class="profile-card-title">Badges</h2>
          <div class="badges-grid">
            {{#each badges}}
            <div class="badge-item" title="{{badge.description}}">
              <span class="badge-icon">{{badge.icon}}</span>
              <span class="badge-name">{{badge.name}}</span>
            </div>
            {{/each}}
          </div>
        </div>
        {{/if}}
        
        {{#if certificates.length}}
        <div class="profile-card">
          <h2 class="profile-card-title">Certificates</h2>
          <div class="certificates-list">
            {{#each certificates}}
            <div class="certificate-item">
              <div class="certificate-icon">üèÜ</div>
              <div class="certificate-info">
                <h4>{{course.title}}</h4>
                <span>{{formatDate issuedAt}}</span>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</section>

{{> footer}}

