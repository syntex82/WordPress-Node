      justify-content: center;
      gap: 40px;
      margin-top: 40px;
      flex-wrap: wrap;
    }
    
    .stat { text-align: center; }
    .stat-value { font-size: 2.5rem; font-weight: 800; }
    .stat-label { font-size: 0.875rem; opacity: 0.8; }
    
    /* Options Section */
