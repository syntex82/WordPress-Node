      margin-top: -60px;
    }
    
    .options-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
      gap: 32px;
    }
    
    .option-card {
      background: var(--white);
      border-radius: 24px;
      padding: 40px;
      box-shadow: var(--shadow-sm);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    
    .option-card:hover {
