<style>
  .dev-profile-page { background: linear-gradient(180deg, #0f172a 0%, #1e293b 100%); min-height: 100vh; }
  .dev-profile-container { max-width: 1200px; margin: 0 auto; padding: 40px 20px; }
  .dev-breadcrumb { display: flex; align-items: center; gap: 8px; font-size: 0.9rem; color: rgba(255,255,255,0.6); margin-bottom: 24px; }
  .dev-breadcrumb a { color: rgba(255,255,255,0.6); text-decoration: none; transition: color 0.2s; }
  .dev-breadcrumb a:hover { color: #6366f1; }
  .dev-breadcrumb span { color: rgba(255,255,255,0.4); }
  .dev-header-card { background: #1e293b; border-radius: 20px; overflow: hidden; border: 1px solid rgba(255,255,255,0.1); margin-bottom: 32px; }
  .dev-cover { height: 180px; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #3b82f6 100%); position: relative; }
  .dev-cover img { width: 100%; height: 100%; object-fit: cover; }
  .dev-featured-badge { position: absolute; top: 16px; right: 16px; background: #fbbf24; color: #78350f; font-weight: 700; padding: 8px 16px; border-radius: 20px; display: flex; align-items: center; gap: 8px; font-size: 0.85rem; }
  .dev-header-content { padding: 24px 32px 32px; margin-top: -80px; position: relative; }
  .dev-header-flex { display: flex; flex-wrap: wrap; gap: 24px; align-items: flex-end; }
  .dev-avatar { width: 140px; height: 140px; border-radius: 20px; border: 4px solid #1e293b; object-fit: cover; box-shadow: 0 10px 40px rgba(0,0,0,0.3); background: #334155; }
  .dev-info { flex: 1; min-width: 280px; }
  .dev-name-row { display: flex; flex-wrap: wrap; align-items: center; gap: 12px; margin-bottom: 8px; }
  .dev-name { font-size: 2rem; font-weight: 800; color: #fff; margin: 0; }
  .dev-badge { display: inline-flex; align-items: center; gap: 6px; padding: 6px 14px; border-radius: 20px; font-size: 0.85rem; font-weight: 600; }
  .dev-badge.verified { background: rgba(59, 130, 246, 0.2); color: #60a5fa; }
  .dev-badge.available { background: rgba(34, 197, 94, 0.2); color: #4ade80; }
  .dev-badge.busy { background: rgba(234, 179, 8, 0.2); color: #facc15; }
  .dev-headline { font-size: 1.15rem; color: rgba(255,255,255,0.7); margin-bottom: 16px; }
  .dev-meta { display: flex; flex-wrap: wrap; gap: 20px; font-size: 0.9rem; color: rgba(255,255,255,0.6); }
  .dev-meta-item { display: flex; align-items: center; gap: 8px; }
  .dev-meta-item svg { width: 18px; height: 18px; }
  .dev-meta-item .star { color: #fbbf24; font-size: 1.1rem; }
  .dev-meta-item strong { color: #fff; font-weight: 700; }
  .dev-rate-card { text-align: right; }
  .dev-rate { font-size: 2.5rem; font-weight: 800; color: #6366f1; }
  .dev-rate span { font-size: 1.2rem; color: rgba(255,255,255,0.5); font-weight: 400; }
  .dev-min-budget { font-size: 0.85rem; color: rgba(255,255,255,0.5); margin-top: 4px; }
  .dev-grid { display: grid; grid-template-columns: 2fr 1fr; gap: 32px; }
  @media (max-width: 900px) { .dev-grid { grid-template-columns: 1fr; } .dev-rate-card { text-align: left; margin-top: 16px; } }
  .dev-section { background: #1e293b; border-radius: 16px; padding: 28px; border: 1px solid rgba(255,255,255,0.1); margin-bottom: 24px; }
  .dev-section-title { font-size: 1.4rem; font-weight: 700; color: #fff; margin-bottom: 20px; }
  .dev-bio { color: rgba(255,255,255,0.7); line-height: 1.7; white-space: pre-line; }
  .dev-skills-group { margin-bottom: 20px; }
  .dev-skills-label { font-size: 0.75rem; font-weight: 600; color: rgba(255,255,255,0.5); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 10px; }
  .dev-skills-list { display: flex; flex-wrap: wrap; gap: 8px; }
  .dev-skill { padding: 8px 16px; border-radius: 8px; font-size: 0.85rem; font-weight: 500; }
  .dev-skill.primary { background: rgba(99, 102, 241, 0.2); color: #a5b4fc; }
  .dev-skill.lang { background: rgba(255,255,255,0.1); color: rgba(255,255,255,0.8); }
  .dev-skill.framework { background: rgba(168, 85, 247, 0.2); color: #c4b5fd; }
  .dev-skill.tool { background: rgba(34, 197, 94, 0.2); color: #86efac; }
  .dev-sidebar-card { background: #1e293b; border-radius: 16px; padding: 24px; border: 1px solid rgba(255,255,255,0.1); margin-bottom: 20px; }
  .dev-sidebar-title { font-size: 1.1rem; font-weight: 700; color: #fff; margin-bottom: 16px; }
  .dev-stat-row { display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid rgba(255,255,255,0.08); }
  .dev-stat-row:last-child { border-bottom: none; }
  .dev-stat-label { color: rgba(255,255,255,0.6); display: flex; align-items: center; gap: 10px; }
  .dev-stat-label svg { width: 18px; height: 18px; color: rgba(255,255,255,0.4); }
  .dev-stat-value { color: #fff; font-weight: 600; }
  .dev-stat-value.green { color: #4ade80; }
  .dev-cta-btn { display: block; width: 100%; padding: 14px; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); color: #fff; border: none; border-radius: 12px; font-size: 1rem; font-weight: 600; cursor: pointer; text-align: center; text-decoration: none; transition: transform 0.2s, box-shadow 0.2s; }
  .dev-cta-btn:hover { transform: translateY(-2px); box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4); }
  .dev-cta-secondary { display: block; width: 100%; padding: 14px; background: transparent; color: #fff; border: 1px solid rgba(255,255,255,0.2); border-radius: 12px; font-size: 1rem; font-weight: 600; cursor: pointer; text-align: center; text-decoration: none; margin-top: 12px; transition: background 0.2s; }
  .dev-cta-secondary:hover { background: rgba(255,255,255,0.05); }
  .dev-form-group { margin-bottom: 16px; }
  .dev-form-label { display: block; font-size: 0.85rem; font-weight: 500; color: rgba(255,255,255,0.7); margin-bottom: 6px; }
  .dev-form-input, .dev-form-textarea, .dev-form-select { width: 100%; padding: 12px 14px; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.15); border-radius: 10px; color: #fff; font-size: 0.95rem; transition: border-color 0.2s; }
  .dev-form-input:focus, .dev-form-textarea:focus, .dev-form-select:focus { outline: none; border-color: #6366f1; }
  .dev-form-input::placeholder, .dev-form-textarea::placeholder { color: rgba(255,255,255,0.4); }
  .dev-form-textarea { min-height: 100px; resize: vertical; }
  .dev-form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }
  .dev-link-item { display: flex; align-items: center; gap: 12px; padding: 12px 0; color: rgba(255,255,255,0.7); text-decoration: none; border-bottom: 1px solid rgba(255,255,255,0.08); transition: color 0.2s; }
  .dev-link-item:last-child { border-bottom: none; }
  .dev-link-item:hover { color: #6366f1; }
  .dev-link-icon { width: 36px; height: 36px; background: rgba(255,255,255,0.1); border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 1rem; }
  .dev-link-arrow { margin-left: auto; color: rgba(255,255,255,0.3); }
  .dev-review { padding: 20px 0; border-bottom: 1px solid rgba(255,255,255,0.08); }
  .dev-review:last-child { border-bottom: none; }
  .dev-review-header { display: flex; gap: 16px; margin-bottom: 12px; }
  .dev-review-avatar { width: 48px; height: 48px; border-radius: 50%; object-fit: cover; background: #334155; }
  .dev-review-meta { flex: 1; }
  .dev-review-name { font-weight: 600; color: #fff; margin-bottom: 4px; }
  .dev-review-date { font-size: 0.85rem; color: rgba(255,255,255,0.5); }
  .dev-review-stars { color: #fbbf24; margin-bottom: 8px; }
  .dev-review-content { color: rgba(255,255,255,0.7); line-height: 1.6; }
  .dev-empty { text-align: center; padding: 40px 20px; color: rgba(255,255,255,0.5); }
  .dev-empty svg { width: 48px; height: 48px; margin: 0 auto 16px; color: rgba(255,255,255,0.3); }
  .dev-success { text-align: center; padding: 24px; }
  .dev-success-icon { width: 64px; height: 64px; background: rgba(34, 197, 94, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 16px; }
  .dev-success-icon svg { width: 32px; height: 32px; color: #4ade80; }
  .dev-success h4 { font-size: 1.1rem; font-weight: 700; color: #fff; margin-bottom: 8px; }
  .dev-success p { color: rgba(255,255,255,0.6); font-size: 0.9rem; margin-bottom: 16px; }
  .dev-success a { color: #6366f1; font-weight: 500; text-decoration: none; }
  .dev-success a:hover { text-decoration: underline; }
  .hidden { display: none !important; }
</style>

<div class="dev-profile-page">
  <div class="dev-profile-container">
    {{!-- Breadcrumb --}}
    <nav class="dev-breadcrumb" aria-label="Breadcrumb">
      <a href="/">Home</a>
      <span>/</span>
      <a href="/hire-developer">Hire a Developer</a>
      <span>/</span>
      <span style="color: #fff;">{{developer.displayName}}</span>
    </nav>

    {{!-- Profile Header --}}
    <div class="dev-header-card">
      <div class="dev-cover">
        {{#if developer.coverImage}}
        <img src="{{developer.coverImage}}" alt="">
        {{/if}}
        {{#if developer.isFeatured}}
        <div class="dev-featured-badge">
          <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
          Featured Developer
        </div>
        {{/if}}
      </div>

      <div class="dev-header-content">
        <div class="dev-header-flex">
          <img src="{{#if developer.profileImage}}{{developer.profileImage}}{{else}}/images/default-avatar.png{{/if}}"
            alt="{{developer.displayName}}" class="dev-avatar">

          <div class="dev-info">
            <div class="dev-name-row">
              <h1 class="dev-name">{{developer.displayName}}</h1>
              {{#if developer.isVerified}}
              <span class="dev-badge verified">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                Verified
              </span>
              {{/if}}
              <span class="dev-badge {{#if (eq developer.availability 'available')}}available{{else}}busy{{/if}}">
                {{#if (eq developer.availability 'available')}}‚óè Available Now{{else if (eq developer.availability 'busy')}}‚óè Partially Available{{else}}{{developer.availability}}{{/if}}
              </span>
            </div>

            <p class="dev-headline">{{developer.headline}}</p>

            <div class="dev-meta">
              <div class="dev-meta-item">
                <span class="star">‚òÖ</span>
                <strong>{{developer.rating}}</strong>
                <span>({{developer.reviewCount}} reviews)</span>
              </div>
              <div class="dev-meta-item">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                <span>{{developer.projectsCompleted}} projects</span>
              </div>
              <div class="dev-meta-item">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span>{{developer.yearsOfExperience}} yrs exp</span>
              </div>
            </div>
          </div>

          <div class="dev-rate-card">
            <div class="dev-rate">${{developer.hourlyRate}}<span>/hr</span></div>
            {{#if developer.minimumBudget}}
            <p class="dev-min-budget">Min. project: ${{developer.minimumBudget}}</p>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

    <div class="dev-grid">
      {{!-- Main Content --}}
      <div>
        {{!-- About Section --}}
        <section class="dev-section" id="about">
          <h2 class="dev-section-title">About</h2>
          <p class="dev-bio">{{developer.bio}}</p>
        </section>

        {{!-- Skills & Expertise --}}
        <section class="dev-section" id="skills">
          <h2 class="dev-section-title">Skills & Expertise</h2>

          {{!-- Primary Skills --}}
          <div class="dev-skills-group">
            <div class="dev-skills-label">Skills</div>
            <div class="dev-skills-list">
              {{#each developer.skills}}
              <span class="dev-skill primary">{{this}}</span>
              {{/each}}
            </div>
          </div>

          {{!-- Programming Languages --}}
          {{#if developer.languages.length}}
          <div class="dev-skills-group">
            <div class="dev-skills-label">Programming Languages</div>
            <div class="dev-skills-list">
              {{#each developer.languages}}
              <span class="dev-skill lang">{{this}}</span>
              {{/each}}
            </div>
          </div>
          {{/if}}

          {{!-- Frameworks --}}
          {{#if developer.frameworks.length}}
          <div class="dev-skills-group">
            <div class="dev-skills-label">Frameworks & Libraries</div>
            <div class="dev-skills-list">
              {{#each developer.frameworks}}
              <span class="dev-skill framework">{{this}}</span>
              {{/each}}
            </div>
          </div>
          {{/if}}

          {{!-- Tools --}}
          {{#if developer.tools.length}}
          <div class="dev-skills-group">
            <div class="dev-skills-label">Tools & Technologies</div>
            <div class="dev-skills-list">
              {{#each developer.tools}}
              <span class="dev-skill tool">{{this}}</span>
              {{/each}}
            </div>
          </div>
          {{/if}}
        </section>

        {{!-- Portfolio Section --}}
        {{#if developer.portfolio.length}}
        <section class="dev-section" id="portfolio">
          <h2 class="dev-section-title">Portfolio</h2>
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px;">
            {{#each developer.portfolio}}
            <div style="background: rgba(255,255,255,0.05); border-radius: 12px; overflow: hidden; border: 1px solid rgba(255,255,255,0.1);">
              {{#if image}}
              <img src="{{image}}" alt="{{title}}" style="width: 100%; height: 160px; object-fit: cover;">
              {{else}}
              <div style="width: 100%; height: 160px; background: linear-gradient(135deg, rgba(99,102,241,0.2) 0%, rgba(168,85,247,0.2) 100%); display: flex; align-items: center; justify-content: center;">
                <svg width="48" height="48" fill="none" stroke="rgba(255,255,255,0.3)" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
              </div>
              {{/if}}
              <div style="padding: 16px;">
                <h3 style="font-weight: 700; color: #fff; margin-bottom: 6px;">{{title}}</h3>
                <p style="font-size: 0.9rem; color: rgba(255,255,255,0.6); margin-bottom: 12px;">{{description}}</p>
                {{#if url}}
                <a href="{{url}}" target="_blank" rel="noopener" style="color: #6366f1; font-size: 0.9rem; font-weight: 500; text-decoration: none;">View Project ‚Üí</a>
                {{/if}}
              </div>
            </div>
            {{/each}}
          </div>
        </section>
        {{/if}}

        {{!-- Reviews Section --}}
        <section class="dev-section" id="reviews">
          <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
            <h2 class="dev-section-title" style="margin-bottom: 0;">Reviews</h2>
            <div style="display: flex; align-items: center; gap: 8px;">
              <span style="color: #fbbf24; font-size: 1.5rem;">‚òÖ</span>
              <span style="font-size: 1.5rem; font-weight: 700; color: #fff;">{{developer.rating}}</span>
              <span style="color: rgba(255,255,255,0.5);">({{developer.reviewCount}} reviews)</span>
            </div>
          </div>

          {{#if developer.reviews.length}}
          <div>
            {{#each developer.reviews}}
            <div class="dev-review">
              <div class="dev-review-header">
                <img src="{{#if reviewer.avatar}}{{reviewer.avatar}}{{else}}/images/default-avatar.png{{/if}}"
                  alt="{{reviewer.name}}" class="dev-review-avatar">
                <div class="dev-review-meta">
                  <div class="dev-review-name">{{reviewer.name}}</div>
                  <div class="dev-review-date">{{formatDate createdAt}}</div>
                </div>
              </div>
              <div class="dev-review-stars">
                {{#times overallRating}}‚òÖ{{/times}}{{#times (subtract 5 overallRating)}}<span style="color: rgba(255,255,255,0.3);">‚òÖ</span>{{/times}}
              </div>
              {{#if title}}<h4 style="font-weight: 600; color: #fff; margin-bottom: 6px;">{{title}}</h4>{{/if}}
              <p class="dev-review-content">{{content}}</p>

              {{!-- Developer Response --}}
              {{#if response}}
              <div style="margin-top: 16px; padding: 12px 16px; background: rgba(99,102,241,0.1); border-left: 3px solid #6366f1; border-radius: 0 8px 8px 0;">
                <p style="font-size: 0.85rem; font-weight: 600; color: #a5b4fc; margin-bottom: 4px;">Response from {{../developer.displayName}}</p>
                <p style="font-size: 0.9rem; color: rgba(255,255,255,0.7);">{{response}}</p>
              </div>
              {{/if}}
            </div>
            {{/each}}
          </div>
          {{else}}
          <div class="dev-empty">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
            <p>No reviews yet. Be the first to work with {{developer.displayName}}!</p>
          </div>
          {{/if}}
        </section>
      </div>

      {{!-- Sidebar --}}
      <div>
        {{!-- Hire CTA Card --}}
        <div class="dev-sidebar-card" id="hire" style="position: sticky; top: 80px;">
          <h3 class="dev-sidebar-title">Hire {{developer.displayName}}</h3>

          {{#if user}}
            {{!-- Authenticated User - Show Hiring Form --}}
            <form action="/api/marketplace/hiring-requests" method="POST" id="hiringForm">
              <input type="hidden" name="developerId" value="{{developer.id}}">

              <div class="dev-form-group">
                <label for="title" class="dev-form-label">Project Title *</label>
                <input type="text" id="title" name="title" required class="dev-form-input"
                  placeholder="e.g., E-commerce Website Development">
              </div>

              <div class="dev-form-group">
                <label for="description" class="dev-form-label">Project Description *</label>
                <textarea id="description" name="description" rows="4" required class="dev-form-textarea"
                  placeholder="Describe your project requirements, goals, and timeline..."></textarea>
              </div>

              <div class="dev-form-row">
                <div class="dev-form-group">
                  <label for="budgetType" class="dev-form-label">Budget Type</label>
                  <select id="budgetType" name="budgetType" class="dev-form-select">
                    <option value="fixed">Fixed Price</option>
                    <option value="hourly">Hourly</option>
                  </select>
                </div>
                <div class="dev-form-group">
                  <label for="budgetAmount" class="dev-form-label">Budget ($) *</label>
                  <input type="number" id="budgetAmount" name="budgetAmount" required min="1" class="dev-form-input"
                    placeholder="1000">
                </div>
              </div>

              <div class="dev-form-group">
                <label for="deadline" class="dev-form-label">Deadline (optional)</label>
                <input type="date" id="deadline" name="deadline" class="dev-form-input">
              </div>

              <button type="submit" class="dev-cta-btn" style="display: flex; align-items: center; justify-content: center; gap: 8px;">
                <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>
                Send Hiring Request
              </button>

              <p style="font-size: 0.75rem; color: rgba(255,255,255,0.5); text-align: center; margin-top: 12px;">
                {{developer.displayName}} typically responds within {{developer.responseTime}} hours
              </p>
            </form>

            <div id="formSuccess" class="hidden dev-success">
              <div class="dev-success-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              </div>
              <h4>Request Sent!</h4>
              <p>{{developer.displayName}} will review your request and respond soon.</p>
              <a href="/admin/marketplace/requests">View My Requests ‚Üí</a>
            </div>
          {{else}}
