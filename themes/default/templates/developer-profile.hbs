{{> header}}

  <main class="max-w-6xl mx-auto px-4 py-8">
    {{!-- Breadcrumb --}}
    <nav class="mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center gap-2 text-sm text-gray-500">
        <li><a href="/" class="hover:text-indigo-600">Home</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/hire-developer" class="hover:text-indigo-600">Hire a Developer</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-gray-900 font-medium">{{developer.displayName}}</li>
      </ol>
    </nav>

    {{!-- Profile Header --}}
    <div class="bg-white rounded-2xl shadow-sm overflow-hidden mb-8">
      {{!-- Cover Image --}}
      <div class="h-40 md:h-52 bg-gradient-to-r from-indigo-600 via-purple-600 to-blue-600 relative">
        {{#if developer.coverImage}}
        <img src="{{developer.coverImage}}" alt="" class="w-full h-full object-cover">
        {{/if}}
        {{#if developer.isFeatured}}
        <span class="absolute top-4 right-4 bg-yellow-400 text-yellow-900 font-bold px-4 py-2 rounded-full flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
          Featured Developer
        </span>
        {{/if}}
      </div>

      <div class="px-6 md:px-8 pb-8 -mt-20 relative">
        <div class="flex flex-col lg:flex-row lg:items-end gap-6">
          {{!-- Avatar --}}
          <div class="flex-shrink-0">
            <img src="{{#if developer.profileImage}}{{developer.profileImage}}{{else}}/images/default-avatar.png{{/if}}"
              alt="{{developer.displayName}}"
              class="w-36 h-36 rounded-2xl border-4 border-white object-cover shadow-xl">
          </div>

          {{!-- Info --}}
          <div class="flex-1 pt-4 lg:pt-0">
            <div class="flex flex-wrap items-center gap-3 mb-2">
              <h1 class="text-3xl font-bold text-gray-900">{{developer.displayName}}</h1>
              {{#if developer.isVerified}}
              <span class="inline-flex items-center gap-1 bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
                Verified
              </span>
              {{/if}}
              <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-sm font-medium
                {{#if (eq developer.availability 'available')}}bg-green-100 text-green-700{{else if (eq developer.availability 'busy')}}bg-yellow-100 text-yellow-700{{else}}bg-gray-100 text-gray-700{{/if}}">
                <span class="w-2 h-2 rounded-full {{#if (eq developer.availability 'available')}}bg-green-500 animate-pulse{{else if (eq developer.availability 'busy')}}bg-yellow-500{{else}}bg-gray-400{{/if}}"></span>
                {{#if (eq developer.availability 'available')}}Available Now{{else if (eq developer.availability 'busy')}}Partially Available{{else}}{{developer.availability}}{{/if}}
              </span>
            </div>

            <p class="text-xl text-gray-600 mb-4">{{developer.headline}}</p>

            <div class="flex flex-wrap items-center gap-6 text-sm">
              <div class="flex items-center gap-1.5">
                <span class="text-yellow-400 text-lg">‚òÖ</span>
                <span class="font-bold text-gray-900 text-lg">{{developer.rating}}</span>
                <span class="text-gray-500">({{developer.reviewCount}} reviews)</span>
              </div>
              <div class="flex items-center gap-1.5 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                <span>{{developer.projectsCompleted}} projects completed</span>
              </div>
              <div class="flex items-center gap-1.5 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span>{{developer.yearsOfExperience}} years experience</span>
              </div>
              {{#if developer.timezone}}
              <div class="flex items-center gap-1.5 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"/></svg>
                <span>{{developer.timezone}}</span>
              </div>
              {{/if}}
            </div>
          </div>

          {{!-- Rate Card --}}
          <div class="lg:text-right">
            <div class="text-4xl font-bold text-indigo-600">
              ${{developer.hourlyRate}}<span class="text-xl text-gray-400 font-normal">/hr</span>
            </div>
            {{#if developer.minimumBudget}}
            <p class="text-sm text-gray-500 mt-1">Min. project: ${{developer.minimumBudget}}</p>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {{!-- Main Content --}}
      <div class="lg:col-span-2 space-y-8">
        {{!-- About Section --}}
        <section class="bg-white rounded-xl shadow-sm p-6 md:p-8" id="about">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">About</h2>
          <div class="prose prose-gray max-w-none">
            <p class="text-gray-600 whitespace-pre-line leading-relaxed">{{developer.bio}}</p>
          </div>
        </section>

        {{!-- Skills & Expertise --}}
        <section class="bg-white rounded-xl shadow-sm p-6 md:p-8" id="skills">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Skills & Expertise</h2>

          {{!-- Primary Skills --}}
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Skills</h3>
            <div class="flex flex-wrap gap-2">
              {{#each developer.skills}}
              <span class="px-4 py-2 bg-indigo-50 text-indigo-700 rounded-lg text-sm font-medium hover:bg-indigo-100 transition">{{this}}</span>
              {{/each}}
            </div>
          </div>

          {{!-- Programming Languages --}}
          {{#if developer.languages.length}}
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Programming Languages</h3>
            <div class="flex flex-wrap gap-2">
              {{#each developer.languages}}
              <span class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium">{{this}}</span>
              {{/each}}
            </div>
          </div>
          {{/if}}

          {{!-- Frameworks --}}
          {{#if developer.frameworks.length}}
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Frameworks & Libraries</h3>
            <div class="flex flex-wrap gap-2">
              {{#each developer.frameworks}}
              <span class="px-4 py-2 bg-purple-50 text-purple-700 rounded-lg text-sm font-medium">{{this}}</span>
              {{/each}}
            </div>
          </div>
          {{/if}}

          {{!-- Tools --}}
          {{#if developer.tools.length}}
          <div>
            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Tools & Technologies</h3>
            <div class="flex flex-wrap gap-2">
              {{#each developer.tools}}
              <span class="px-4 py-2 bg-green-50 text-green-700 rounded-lg text-sm font-medium">{{this}}</span>
              {{/each}}
            </div>
          </div>
          {{/if}}
        </section>

        {{!-- Portfolio Section --}}
        {{#if developer.portfolio.length}}
        <section class="bg-white rounded-xl shadow-sm p-6 md:p-8" id="portfolio">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Portfolio</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {{#each developer.portfolio}}
            <div class="border border-gray-200 rounded-xl overflow-hidden hover:shadow-md transition">
              {{#if image}}
              <img src="{{image}}" alt="{{title}}" class="w-full h-40 object-cover">
              {{else}}
              <div class="w-full h-40 bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center">
                <svg class="w-12 h-12 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
              </div>
              {{/if}}
              <div class="p-4">
                <h3 class="font-bold text-gray-900 mb-1">{{title}}</h3>
                <p class="text-sm text-gray-600 mb-3">{{description}}</p>
                {{#if url}}
                <a href="{{url}}" target="_blank" rel="noopener" class="text-indigo-600 text-sm font-medium hover:underline">View Project ‚Üí</a>
                {{/if}}
              </div>
            </div>
            {{/each}}
          </div>
        </section>
        {{/if}}

        {{!-- Reviews Section --}}
        <section class="bg-white rounded-xl shadow-sm p-6 md:p-8" id="reviews">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Reviews</h2>
            <div class="flex items-center gap-2">
              <span class="text-yellow-400 text-2xl">‚òÖ</span>
              <span class="text-2xl font-bold">{{developer.rating}}</span>
              <span class="text-gray-500">({{developer.reviewCount}} reviews)</span>
            </div>
          </div>

          {{#if developer.reviews.length}}
          <div class="space-y-6">
            {{#each developer.reviews}}
            <article class="border-b border-gray-100 pb-6 last:border-0 last:pb-0">
              <div class="flex items-start gap-4">
                <img src="{{#if reviewer.avatar}}{{reviewer.avatar}}{{else}}/images/default-avatar.png{{/if}}"
                  alt="{{reviewer.name}}" class="w-12 h-12 rounded-full object-cover">
                <div class="flex-1">
                  <div class="flex flex-wrap items-center gap-2 mb-1">
                    <span class="font-semibold text-gray-900">{{reviewer.name}}</span>
                    <span class="text-gray-400">‚Ä¢</span>
                    <time class="text-sm text-gray-500">{{formatDate createdAt}}</time>
                  </div>
                  <div class="flex items-center gap-1 mb-2">
                    {{#times overallRating}}<span class="text-yellow-400">‚òÖ</span>{{/times}}
                    {{#times (subtract 5 overallRating)}}<span class="text-gray-300">‚òÖ</span>{{/times}}
                  </div>
                  {{#if title}}<h4 class="font-medium text-gray-900 mb-1">{{title}}</h4>{{/if}}
                  <p class="text-gray-600">{{content}}</p>

                  {{!-- Developer Response --}}
                  {{#if response}}
                  <div class="mt-4 pl-4 border-l-2 border-indigo-200 bg-indigo-50/50 py-3 px-4 rounded-r-lg">
                    <p class="text-sm font-medium text-indigo-700 mb-1">Response from {{../developer.displayName}}</p>
                    <p class="text-sm text-gray-600">{{response}}</p>
                  </div>
                  {{/if}}
                </div>
              </div>
            </article>
            {{/each}}
          </div>
          {{else}}
          <div class="text-center py-8 text-gray-500">
            <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
            <p>No reviews yet. Be the first to work with {{developer.displayName}}!</p>
          </div>
          {{/if}}
        </section>
      </div>

      {{!-- Sidebar --}}
      <div class="space-y-6">
        {{!-- Hire CTA Card --}}
        <div class="bg-white rounded-xl shadow-sm p-6 sticky top-4" id="hire">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Hire {{developer.displayName}}</h3>

          {{#if user}}
            {{!-- Authenticated User - Show Hiring Form --}}
            <form action="/api/marketplace/hiring-requests" method="POST" id="hiringForm" class="space-y-4">
              <input type="hidden" name="developerId" value="{{developer.id}}">

              <div>
                <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Project Title *</label>
                <input type="text" id="title" name="title" required
                  class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                  placeholder="e.g., E-commerce Website Development">
              </div>

              <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Project Description *</label>
                <textarea id="description" name="description" rows="4" required
                  class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                  placeholder="Describe your project requirements, goals, and timeline..."></textarea>
              </div>

              <div class="grid grid-cols-2 gap-3">
                <div>
                  <label for="budgetType" class="block text-sm font-medium text-gray-700 mb-1">Budget Type</label>
                  <select id="budgetType" name="budgetType" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                    <option value="fixed">Fixed Price</option>
                    <option value="hourly">Hourly</option>
                  </select>
                </div>
                <div>
                  <label for="budgetAmount" class="block text-sm font-medium text-gray-700 mb-1">Budget ($) *</label>
                  <input type="number" id="budgetAmount" name="budgetAmount" required min="1"
                    class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                    placeholder="1000">
                </div>
              </div>

              <div>
                <label for="deadline" class="block text-sm font-medium text-gray-700 mb-1">Deadline (optional)</label>
                <input type="date" id="deadline" name="deadline"
                  class="w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
              </div>

              <button type="submit" class="w-full bg-indigo-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-indigo-700 transition flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>
                Send Hiring Request
              </button>

              <p class="text-xs text-gray-500 text-center">
                {{developer.displayName}} typically responds within {{developer.responseTime}} hours
              </p>
            </form>

            <div id="formSuccess" class="hidden text-center py-6">
              <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              </div>
              <h4 class="font-bold text-gray-900 mb-2">Request Sent!</h4>
              <p class="text-sm text-gray-600 mb-4">{{developer.displayName}} will review your request and respond soon.</p>
              <a href="/admin/marketplace/requests" class="text-indigo-600 font-medium hover:underline">View My Requests ‚Üí</a>
            </div>
          {{else}}
            {{!-- Guest User - Show Auth Gate --}}
            <div class="text-center py-4">
              <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
              </div>
              <h4 class="font-bold text-gray-900 mb-2">Sign up to hire this developer</h4>
              <p class="text-sm text-gray-600 mb-6">Create a free account to send hiring requests and collaborate with developers.</p>

              <a href="/register?redirect=/developer/{{developer.slug}}"
                class="block w-full bg-indigo-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-indigo-700 transition mb-3">
                Create Free Account
              </a>
              <a href="/login?redirect=/developer/{{developer.slug}}"
                class="block w-full border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-semibold hover:bg-gray-50 transition">
                Already have an account? Login
              </a>
            </div>
          {{/if}}
        </div>

        {{!-- Quick Stats Card --}}
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h3 class="font-bold text-gray-900 mb-4">Quick Stats</h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-gray-600 flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/></svg>
                Category
              </span>
              <span class="font-medium text-gray-900">{{developer.category}}</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-600 flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                Min. Budget
              </span>
              <span class="font-medium text-gray-900">${{developer.minimumBudget}}</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-600 flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                Available Hours
              </span>
              <span class="font-medium text-gray-900">{{developer.availableHours}} hrs/week</span>
            </div>
            {{#if developer.completionRate}}
            <div class="flex items-center justify-between">
              <span class="text-gray-600 flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                Completion Rate
              </span>
              <span class="font-medium text-green-600">{{developer.completionRate}}%</span>
            </div>
            {{/if}}
            {{#if developer.responseTime}}
            <div class="flex items-center justify-between">
              <span class="text-gray-600 flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
                Response Time
              </span>
              <span class="font-medium text-gray-900">~{{developer.responseTime}} hours</span>
            </div>
            {{/if}}
          </div>
        </div>

        {{!-- Links Card --}}
        {{#if (or developer.websiteUrl developer.githubUrl developer.linkedinUrl developer.twitterUrl)}}
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h3 class="font-bold text-gray-900 mb-4">Links</h3>
          <div class="space-y-3">
            {{#if developer.websiteUrl}}
            <a href="{{developer.websiteUrl}}" target="_blank" rel="noopener"
              class="flex items-center gap-3 text-gray-700 hover:text-indigo-600 transition">
              <span class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">üåê</span>
              <span>Website</span>
              <svg class="w-4 h-4 ml-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
            </a>
            {{/if}}
            {{#if developer.githubUrl}}
            <a href="{{developer.githubUrl}}" target="_blank" rel="noopener"
