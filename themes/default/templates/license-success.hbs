{{> header}}

<style>
  .license-success-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 50%, #0f172a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
  }
  .success-card {
    background: linear-gradient(145deg, #1e293b 0%, #0f172a 100%);
    border-radius: 24px;
    padding: 60px 50px;
    max-width: 600px;
    width: 100%;
    text-align: center;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .success-icon {
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 30px;
    font-size: 60px;
  }
  .success-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: white;
    margin-bottom: 16px;
  }
  .success-subtitle {
    font-size: 1.2rem;
    color: #94a3b8;
    margin-bottom: 40px;
    line-height: 1.6;
  }
  .github-btn {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    padding: 18px 36px;
    border-radius: 14px;
    font-size: 1.2rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-bottom: 30px;
  }
  .github-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(16, 185, 129, 0.4);
  }
  .github-btn svg {
    width: 28px;
    height: 28px;
    fill: white;
  }
  .success-info {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 24px;
    margin-top: 20px;
  }
  .success-info h4 {
    color: #e2e8f0;
    font-size: 1rem;
    margin-bottom: 16px;
    font-weight: 600;
  }
  .success-info ul {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
  }
  .success-info li {
    color: #94a3b8;
    padding: 8px 0;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .success-info li::before {
    content: "‚úì";
    color: #10b981;
    font-weight: bold;
  }
  .back-home {
    display: inline-block;
    color: #94a3b8;
    text-decoration: none;
    margin-top: 30px;
    font-size: 0.95rem;
    transition: color 0.2s;
  }
  .back-home:hover {
    color: #10b981;
  }
</style>

