<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Demo Conversion Analytics | NodePress Admin</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Inter', sans-serif; background: #0f172a; color: #e2e8f0; min-height: 100vh; }
    .container { max-width: 1400px; margin: 0 auto; padding: 32px; }
    h1 { font-size: 2rem; margin-bottom: 8px; }
    .subtitle { color: #94a3b8; margin-bottom: 32px; }
    
    .metrics-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 40px; }
    .metric-card { background: #1e293b; border-radius: 12px; padding: 24px; text-align: center; }
    .metric-value { font-size: 2.5rem; font-weight: 700; color: #6366f1; }
    .metric-value.success { color: #10b981; }
    .metric-value.warning { color: #f59e0b; }
    .metric-value.info { color: #3b82f6; }
    .metric-label { color: #94a3b8; font-size: 0.9rem; margin-top: 4px; }
    
    .section { background: #1e293b; border-radius: 12px; padding: 24px; margin-bottom: 24px; }
    .section-title { font-size: 1.25rem; margin-bottom: 20px; display: flex; align-items: center; gap: 10px; }
    
    .funnel { display: flex; gap: 16px; flex-wrap: wrap; }
    .funnel-step { flex: 1; min-width: 150px; text-align: center; padding: 20px; background: #0f172a; border-radius: 8px; }
    .funnel-value { font-size: 1.75rem; font-weight: 600; color: #6366f1; }
    .funnel-label { color: #94a3b8; font-size: 0.85rem; margin-top: 4px; }
    .funnel-arrow { display: flex; align-items: center; color: #475569; font-size: 1.5rem; }
    
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 12px 16px; text-align: left; border-bottom: 1px solid #334155; }
    th { color: #94a3b8; font-weight: 500; font-size: 0.85rem; text-transform: uppercase; }
    tr:hover { background: #0f172a; }
    
    .status { padding: 4px 12px; border-radius: 12px; font-size: 0.8rem; font-weight: 500; }
    .status.active { background: #10b981; color: white; }
    .status.expired { background: #ef4444; color: white; }
    .status.converted { background: #6366f1; color: white; }
    
    .btn { display: inline-block; padding: 10px 20px; background: #6366f1; color: white; border-radius: 8px; text-decoration: none; font-weight: 500; }
    .btn:hover { background: #4f46e5; }
    
    .back-link { color: #6366f1; text-decoration: none; display: inline-flex; align-items: center; gap: 8px; margin-bottom: 24px; }
    .back-link:hover { text-decoration: underline; }
  </style>
</head>
<body>
  <div class="container">
    <a href="/admin" class="back-link">‚Üê Back to Admin</a>
    
    <h1>üìä Demo Conversion Analytics</h1>
    <p class="subtitle">Track demo performance and conversion metrics</p>
    
    <!-- Key Metrics -->
    <div class="metrics-grid">
      <div class="metric-card">
        <div class="metric-value">{{metrics.totalDemos}}</div>
        <div class="metric-label">Total Demos</div>
      </div>
      <div class="metric-card">
        <div class="metric-value info">{{metrics.activeDemos}}</div>
        <div class="metric-label">Active Demos</div>
      </div>
      <div class="metric-card">
        <div class="metric-value success">{{metrics.conversions}}</div>
        <div class="metric-label">Conversions</div>
      </div>
      <div class="metric-card">
        <div class="metric-value success">{{metrics.conversionRate}}%</div>
        <div class="metric-label">Conversion Rate</div>
      </div>
      <div class="metric-card">
        <div class="metric-value warning">{{metrics.inquiries}}</div>
        <div class="metric-label">Inquiries</div>
      </div>
    </div>
    
    <!-- Conversion Funnel -->
    <div class="section">
      <h2 class="section-title">üîÑ Conversion Funnel</h2>
      <div class="funnel">
        <div class="funnel-step">
          <div class="funnel-value">{{metrics.totalDemos}}</div>
          <div class="funnel-label">Demos Started</div>
        </div>
        <div class="funnel-arrow">‚Üí</div>
        <div class="funnel-step">
          <div class="funnel-value">{{metrics.pageViews}}</div>
          <div class="funnel-label">Upgrade Views</div>
        </div>
        <div class="funnel-arrow">‚Üí</div>
        <div class="funnel-step">
          <div class="funnel-value">{{metrics.ctaClicks}}</div>
          <div class="funnel-label">CTA Clicks</div>
        </div>
        <div class="funnel-arrow">‚Üí</div>
        <div class="funnel-step">
          <div class="funnel-value">{{metrics.inquiries}}</div>
          <div class="funnel-label">Inquiries</div>
        </div>
        <div class="funnel-arrow">‚Üí</div>
        <div class="funnel-step">
          <div class="funnel-value">{{metrics.conversions}}</div>
          <div class="funnel-label">Converted</div>
        </div>
      </div>
    </div>
    
    <!-- Click Distribution -->
    <div class="section">
      <h2 class="section-title">üéØ Click Distribution</h2>
      <div class="metrics-grid" style="grid-template-columns: repeat(2, 1fr);">
        <div class="metric-card">
          <div class="metric-value info">{{metrics.hostingerClicks}}</div>
          <div class="metric-label">Hostinger VPS Clicks</div>
        </div>
        <div class="metric-card">
          <div class="metric-value">{{metrics.customDevClicks}}</div>
          <div class="metric-label">Custom Dev Clicks</div>
        </div>
      </div>
    </div>
    
    <!-- Email Stats -->
    <div class="section">
      <h2 class="section-title">üìß Email Performance</h2>
      <div class="metrics-grid" style="grid-template-columns: repeat(3, 1fr);">
        <div class="metric-card">
          <div class="metric-value">{{metrics.emailsSent}}</div>
          <div class="metric-label">Emails Sent</div>
        </div>
        <div class="metric-card">
          <div class="metric-value success">{{metrics.emailsOpened}}</div>
          <div class="metric-label">Emails Opened</div>
        </div>
        <div class="metric-card">
          <div class="metric-value warning">{{metrics.unsubscribes}}</div>
          <div class="metric-label">Unsubscribes</div>
        </div>
      </div>
    </div>
    
    <!-- Recent Demos Table -->
    <div class="section">
      <h2 class="section-title">üë• Recent Demos</h2>
      <table>
        <thead>
          <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Company</th>
            <th>Status</th>
            <th>Posts</th>
            <th>Pages</th>
            <th>Hours</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          {{#each recentDemos}}
          <tr>
            <td>{{this.email}}</td>
            <td>{{this.name}}</td>
            <td>{{this.company}}</td>
            <td><span class="status {{this.status}}">{{this.status}}</span></td>
            <td>{{this.postsCreated}}</td>
            <td>{{this.pagesCreated}}</td>
            <td>{{this.hoursUsed}}</td>
            <td>{{formatDate this.createdAt}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>

