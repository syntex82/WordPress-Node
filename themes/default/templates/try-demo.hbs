<script>
document.getElementById('demo-request-form').addEventListener('submit', async (e) => {
  e.preventDefault();
  
  const btn = document.getElementById('submit-btn');
  const resultDiv = document.getElementById('demo-result');
  const form = e.target;
  
  btn.disabled = true;
  btn.textContent = 'Sending verification email...';
  resultDiv.innerHTML = '';
  
  try {
    const response = await fetch('/api/demos/request', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        name: form.name.value,
        email: form.email.value,
        company: form.company.value || undefined,
        phone: form.phone.value || undefined,
      })
    });
    
    const data = await response.json();

    if (!response.ok) {
      const error = new Error(data.message || 'Failed to create demo');
      error.response = data; // Attach the full response data
      throw error;
    }

    form.style.display = 'none';

    // Check if email verification is required (new flow)
    if (data.requiresVerification) {
      resultDiv.innerHTML = `
        <div class="demo-success">
          <h3>ðŸ“§ Check Your Email!</h3>
          <p style="font-size: 1.1em; margin: 20px 0;">
            We've sent a verification link to <strong>${form.email.value}</strong>
          </p>
          <div style="background: rgba(59, 130, 246, 0.1); border: 1px solid rgba(59, 130, 246, 0.3); border-radius: 12px; padding: 20px; margin: 20px 0;">
            <p style="margin: 0 0 10px 0;"><strong>Next steps:</strong></p>
            <ol style="text-align: left; margin: 0; padding-left: 20px;">
              <li>Check your inbox (and spam folder)</li>
              <li>Click the verification link in the email</li>
              <li>Your demo will be created instantly!</li>
            </ol>
          </div>
          <p style="color: rgba(255,255,255,0.6); font-size: 0.9em;">
            The verification link expires in 24 hours.
          </p>
        </div>
      `;
    } else {
      // Legacy flow - immediate demo creation (for backwards compatibility)
      resultDiv.innerHTML = `
        <div class="demo-success">
          <h3>ðŸŽ‰ Your Demo is Ready!</h3>
          <p>We've also sent these details to your email.</p>
        </div>
        <div class="demo-credentials">
          <h3>ðŸ“‹ Your Demo Credentials</h3>
          <div class="credential-row">
            <span class="label">Demo URL:</span>
            <span>${data.accessUrl || '/demo/' + data.subdomain}</span>
          </div>
          <div class="credential-row">
            <span class="label">Admin Email:</span>
            <span>${data.adminEmail}</span>
          </div>
          <div class="credential-row">
            <span class="label">Password:</span>
            <span>${data.adminPassword}</span>
          </div>
          <div class="credential-row">
            <span class="label">Expires:</span>
            <span>${new Date(data.expiresAt).toLocaleString()}</span>
          </div>
          <a href="${data.accessUrl || '/demo/' + data.subdomain}/admin"
             class="demo-access-btn">
            Access Your Demo â†’
          </a>
        </div>
      `;
    }
  } catch (err) {
    // Check if this is an "active demo exists" error with demo info
    if (err.response && err.response.code === 'ACTIVE_DEMO_EXISTS') {
      const demoData = err.response;
      form.style.display = 'none';
      resultDiv.innerHTML = `
        <div class="demo-success">
          <h3>âœ… You Already Have an Active Demo!</h3>
          <p style="font-size: 1.1em; margin: 20px 0;">
            Your demo is still active and expires in <strong>${demoData.hoursRemaining} hours</strong>.
          </p>
          <div style="background: rgba(16, 185, 129, 0.1); border: 1px solid rgba(16, 185, 129, 0.3); border-radius: 12px; padding: 20px; margin: 20px 0;">
            <p style="margin: 0 0 10px 0;"><strong>Access your demo:</strong></p>
            <div class="credential-row">
              <span class="label">Demo URL:</span>
              <span><a href="${demoData.demoUrl}" style="color: #10b981;">${demoData.demoUrl}</a></span>
            </div>
            <div class="credential-row">
              <span class="label">Expires:</span>
              <span>${new Date(demoData.expiresAt).toLocaleString()}</span>
            </div>
          </div>
          <a href="${demoData.demoUrl}" class="demo-access-btn" style="display: inline-block; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 14px 28px; border-radius: 8px; text-decoration: none; font-weight: 600; margin-top: 16px;">
            Access Your Demo â†’
          </a>
          <p style="color: rgba(255,255,255,0.6); font-size: 0.9em; margin-top: 20px;">
            You can request a new demo after this one expires.
          </p>
        </div>
      `;
    } else {
      resultDiv.innerHTML = `<div class="demo-error">${err.message}</div>`;
      btn.disabled = false;
      btn.textContent = 'Create My Demo â†’';
    }
  }
});
</script>

