  .demo-info-value { color: white; font-weight: 600; }
  .demo-timer {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 12px;
    padding: 16px;
    margin-bottom: 24px;
  }
  .demo-timer-label { color: #f87171; font-size: 0.85rem; margin-bottom: 4px; }
  .demo-timer-value { color: #fecaca; font-size: 1.5rem; font-weight: 700; }
  .demo-actions {
