    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    text-align: left;
  }
  .demo-feature {
    display: flex;
    align-items: center;
    gap: 10px;
    color: #e2e8f0;
    font-size: 0.9rem;
  }
  .demo-feature-icon {
    width: 24px;
    height: 24px;
    background: rgba(16, 185, 129, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
  }
  @media (max-width: 600px) {
    .demo-features { grid-template-columns: 1fr; }
    .demo-card { padding: 24px; }
