{{> header}}

<style>
  .dev-page {
    background: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);
    min-height: 100vh;
  }
  .dev-hero {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #3b82f6 100%);
    padding: 80px 20px 60px;
    text-align: center;
  }
  .dev-hero h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #fff;
    margin-bottom: 1rem;
  }
  .dev-hero p {
    color: rgba(255,255,255,0.9);
    font-size: 1.15rem;
    max-width: 700px;
    margin: 0 auto 2rem;
  }
  .dev-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }
  .dev-stat {
    text-align: center;
  }
  .dev-stat-num {
    font-size: 2rem;
    font-weight: 800;
    color: #fff;
  }
  .dev-stat-label {
    color: rgba(255,255,255,0.7);
    font-size: 0.9rem;
  }
  .dev-search-form {
    max-width: 600px;
    margin: 0 auto 2rem;
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }
  .dev-search-input {
    flex: 1;
    min-width: 250px;
    padding: 14px 20px;
    border-radius: 12px;
    border: none;
    font-size: 1rem;
    background: #fff;
    color: #1e293b;
  }
  .dev-search-input::placeholder { color: #94a3b8; }
  .dev-search-btn {
    padding: 14px 28px;
    background: #0f172a;
    color: #fff;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }
  .dev-search-btn:hover { background: #1e293b; }
  .dev-categories {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }
  .dev-cat-link {
    padding: 8px 16px;
    border: 2px solid rgba(255,255,255,0.3);
    border-radius: 20px;
    color: rgba(255,255,255,0.9);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.2s;
  }
  .dev-cat-link:hover {
    background: rgba(255,255,255,0.1);
    border-color: rgba(255,255,255,0.5);
  }
  .dev-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }
  .dev-content {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
  }
  .dev-sidebar {
    width: 280px;
    flex-shrink: 0;
    background: rgba(30, 41, 59, 0.8);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 16px;
    padding: 1.5rem;
    position: sticky;
    top: 80px;
  }
  .dev-sidebar h2 {
    color: #fff;
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .dev-sidebar h2 a {
    color: #10b981;
    font-size: 0.8rem;
    text-decoration: none;
  }
  .dev-filter-group {
    margin-bottom: 1.5rem;
  }
  .dev-filter-group label {
    display: block;
    color: #e2e8f0;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }
  .dev-filter-group select,
  .dev-filter-group input[type="text"],
  .dev-filter-group input[type="number"] {
    width: 100%;
    padding: 10px 12px;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(255,255,255,0.15);
    border-radius: 8px;
    color: #fff;
    font-size: 0.9rem;
  }
  .dev-filter-group select:focus,
  .dev-filter-group input:focus {
    outline: none;
    border-color: #10b981;
  }
  .dev-radio-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .dev-radio-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #94a3b8;
    font-size: 0.85rem;
    cursor: pointer;
  }
  .dev-radio-item input { accent-color: #10b981; }
  .dev-rate-inputs {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
  }
  .dev-filter-btn {
    width: 100%;
    padding: 12px;
    background: linear-gradient(135deg, #10b981 0%, #6366f1 100%);
    color: #fff;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s;
  }
  .dev-filter-btn:hover { opacity: 0.9; }
  .dev-main {
    flex: 1;
  }
  .dev-results-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .dev-results-header h2 {
    color: #fff;
    font-size: 1.25rem;
    margin: 0;
  }
  .dev-results-header p {
    color: #94a3b8;
    margin: 0.25rem 0 0;
    font-size: 0.9rem;
  }
  .dev-sort select {
    padding: 8px 12px;
    background: rgba(30, 41, 59, 0.8);
    border: 1px solid rgba(255,255,255,0.15);
    border-radius: 8px;
    color: #fff;
    font-size: 0.85rem;
  }
  .dev-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }
  .dev-card {
    background: rgba(30, 41, 59, 0.6);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s;
  }
  .dev-card:hover {
    border-color: rgba(16, 185, 129, 0.4);
    transform: translateY(-4px);
  }
  .dev-card-header {
    height: 80px;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    position: relative;
  }
  .dev-card-featured {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #fbbf24;
    color: #78350f;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 12px;
  }
  .dev-card-body {
    padding: 1.5rem;
    margin-top: -40px;
  }
  .dev-card-avatar {
    width: 80px;
    height: 80px;
    border-radius: 12px;
    border: 4px solid #1e293b;
    object-fit: cover;
    background: #334155;
  }
  .dev-card-info {
    margin-top: 1rem;
  }
  .dev-card-name {
    color: #fff;
    font-size: 1.1rem;
    font-weight: 700;
    margin: 0 0 0.25rem;
  }
  .dev-card-headline {
    color: #94a3b8;
    font-size: 0.85rem;
    margin: 0;
  }
  .dev-card-stats {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 1rem 0;
    font-size: 0.85rem;
  }
  .dev-card-rating {
    color: #fbbf24;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  .dev-card-rating span { color: #fff; font-weight: 600; }
  .dev-card-projects { color: #94a3b8; }
  .dev-card-skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 1rem 0;
    min-height: 52px;
  }
  .dev-skill-tag {
    background: rgba(99, 102, 241, 0.2);
    color: #a5b4fc;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
  }
  .dev-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(255,255,255,0.1);
    margin-top: 1rem;
  }
  .dev-card-exp { color: #94a3b8; font-size: 0.85rem; }
  .dev-card-rate {
    color: #10b981;
    font-size: 1.25rem;
    font-weight: 700;
  }
  .dev-card-rate span { color: #64748b; font-size: 0.85rem; font-weight: 400; }
  .dev-card-avail {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    margin: 0.75rem 0;
  }
  .dev-card-avail.available { background: rgba(16, 185, 129, 0.2); color: #10b981; }
  .dev-card-avail.busy { background: rgba(251, 191, 36, 0.2); color: #fbbf24; }
  .dev-card-avail-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: currentColor;
  }
  .dev-card-btn {
    display: block;
    width: 100%;
    padding: 12px;
    background: linear-gradient(135deg, #10b981 0%, #6366f1 100%);
    color: #fff;
    text-align: center;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 600;
    margin-top: 1rem;
    transition: opacity 0.2s;
  }
  .dev-card-btn:hover { opacity: 0.9; }
  .dev-empty {
    text-align: center;
    padding: 60px 20px;
    background: rgba(30, 41, 59, 0.6);
    border-radius: 16px;
    border: 1px solid rgba(255,255,255,0.08);
  }
  .dev-empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }
  .dev-empty h3 { color: #fff; margin-bottom: 0.5rem; }
  .dev-empty p { color: #94a3b8; margin-bottom: 1.5rem; }
  .dev-cta {
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    padding: 60px 20px;
    text-align: center;
    border-top: 1px solid rgba(255,255,255,0.1);
  }
  .dev-cta h2 { color: #fff; font-size: 2rem; margin-bottom: 1rem; }
  .dev-cta p { color: #94a3b8; max-width: 600px; margin: 0 auto 2rem; }
  .dev-cta-btns { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }
  .dev-cta-btn {
    padding: 14px 28px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }
  .dev-cta-btn.primary { background: linear-gradient(135deg, #10b981 0%, #6366f1 100%); color: #fff; }
  .dev-cta-btn.secondary { background: rgba(255,255,255,0.1); color: #fff; border: 1px solid rgba(255,255,255,0.2); }
  @media (max-width: 900px) {
    .dev-content { flex-direction: column; }
    .dev-sidebar { width: 100%; position: static; }
    .dev-hero h1 { font-size: 2rem; }
    .dev-stats { gap: 1.5rem; }
  }
</style>

<div class="dev-page">
  <section class="dev-hero">
    <h1>Hire Top Developers</h1>
    <p>Connect with verified professionals ready to bring your vision to life. From web apps to mobile solutions, find the perfect match for your project.</p>

    <div class="dev-stats">
      <div class="dev-stat">
        <div class="dev-stat-num">{{stats.totalDevelopers}}+</div>
        <div class="dev-stat-label">Verified Developers</div>
      </div>
      <div class="dev-stat">
        <div class="dev-stat-num">{{stats.projectsCompleted}}+</div>
        <div class="dev-stat-label">Projects Completed</div>
      </div>
      <div class="dev-stat">
        <div class="dev-stat-num">{{stats.avgRating}}</div>
        <div class="dev-stat-label">Average Rating</div>
      </div>
    </div>

    <form action="/hire-developer" method="GET" class="dev-search-form">
      <input type="text" name="search" value="{{filters.search}}" placeholder="Search by name, skill, or expertise..." class="dev-search-input">
      <button type="submit" class="dev-search-btn">Find Developers</button>
    </form>

    <div class="dev-categories">
      {{#each categories}}
      <a href="/hire-developer?category={{value}}" class="dev-cat-link">{{label}}</a>
      {{/each}}
    </div>
  </section>

  <div class="dev-container">
    <div class="dev-content">
      {{!-- Filter Sidebar --}}
      <aside class="dev-sidebar">
        <h2>Filters <a href="/hire-developer">Clear all</a></h2>

        <form action="/hire-developer" method="GET" id="filterForm">
          <div class="dev-filter-group">
            <label>Category</label>
            <select name="category" onchange="document.getElementById('filterForm').submit()">
              <option value="">All Categories</option>
              {{#each categories}}
              <option value="{{value}}" {{#if (eq value ../filters.category)}}selected{{/if}}>{{label}}</option>
              {{/each}}
            </select>
          </div>

          <div class="dev-filter-group">
            <label>Experience Level</label>
            <div class="dev-radio-group">
              <label class="dev-radio-item">
                <input type="radio" name="experience" value="" {{#unless filters.experience}}checked{{/unless}}>
                All Levels
              </label>
              <label class="dev-radio-item">
                <input type="radio" name="experience" value="entry" {{#if (eq filters.experience "entry")}}checked{{/if}}>
                Entry (0-2 years)
              </label>
              <label class="dev-radio-item">
                <input type="radio" name="experience" value="mid" {{#if (eq filters.experience "mid")}}checked{{/if}}>
                Mid (3-5 years)
              </label>
              <label class="dev-radio-item">
                <input type="radio" name="experience" value="senior" {{#if (eq filters.experience "senior")}}checked{{/if}}>
                Senior (6-10 years)
              </label>
              <label class="dev-radio-item">
                <input type="radio" name="experience" value="expert" {{#if (eq filters.experience "expert")}}checked{{/if}}>
                Expert (10+ years)
              </label>
            </div>
          </div>

          <div class="dev-filter-group">
            <label>Hourly Rate</label>
            <div class="dev-rate-inputs">
              <input type="number" name="minRate" value="{{filters.minRate}}" placeholder="$0" min="0">
              <input type="number" name="maxRate" value="{{filters.maxRate}}" placeholder="$500+" min="0">
            </div>
          </div>

          <div class="dev-filter-group">
            <label>Skills</label>
            <input type="text" name="skills" value="{{filters.skills}}" placeholder="React, Node.js, Python...">
          </div>

          <div class="dev-filter-group">
            <label>Availability</label>
            <select name="availability">
              <option value="">Any</option>
              <option value="available" {{#if (eq filters.availability "available")}}selected{{/if}}>Available Now</option>
              <option value="busy" {{#if (eq filters.availability "busy")}}selected{{/if}}>Partially Available</option>
            </select>
          </div>

          <button type="submit" class="dev-filter-btn">Apply Filters</button>
        </form>
      </aside>

      {{!-- Main Content --}}
      <div class="dev-main">
        <div class="dev-results-header">
          <div>
            <h2>{{#if filters.search}}Results for "{{filters.search}}"{{else}}Available Developers{{/if}}</h2>
            <p>{{pagination.total}} developers found</p>
          </div>
          <div class="dev-sort">
            <select onchange="updateSort(this.value)">
              <option value="rating" {{#if (eq filters.sortBy "rating")}}selected{{/if}}>Top Rated</option>
              <option value="projects" {{#if (eq filters.sortBy "projects")}}selected{{/if}}>Most Projects</option>
              <option value="rate_low" {{#if (eq filters.sortBy "rate_low")}}selected{{/if}}>Lowest Rate</option>
              <option value="rate_high" {{#if (eq filters.sortBy "rate_high")}}selected{{/if}}>Highest Rate</option>
              <option value="newest" {{#if (eq filters.sortBy "newest")}}selected{{/if}}>Newest</option>
            </select>
          </div>
        </div>

        {{#if developers.length}}
        <div class="dev-grid">
          {{#each developers}}
          <article class="dev-card">
            <div class="dev-card-header">
              {{#if isFeatured}}<span class="dev-card-featured">‚≠ê Featured</span>{{/if}}
            </div>
            <div class="dev-card-body">
              <img src="{{#if profileImage}}{{profileImage}}{{else}}/images/default-avatar.png{{/if}}" alt="{{displayName}}" class="dev-card-avatar" loading="lazy">
              <div class="dev-card-info">
                <h3 class="dev-card-name">{{displayName}}</h3>
                <p class="dev-card-headline">{{headline}}</p>
              </div>
              <div class="dev-card-stats">
                <div class="dev-card-rating">‚òÖ <span>{{rating}}</span> ({{reviewCount}})</div>
                <div class="dev-card-projects">{{projectsCompleted}} projects</div>
              </div>
              <div class="dev-card-skills">
                {{#each skills}}
                {{#if (lt @index 4)}}
                <span class="dev-skill-tag">{{this}}</span>
                {{/if}}
                {{/each}}
              </div>
              <div class="dev-card-avail {{#if (eq availability 'available')}}available{{else}}busy{{/if}}">
                <span class="dev-card-avail-dot"></span>
                {{#if (eq availability 'available')}}Available Now{{else}}{{availability}}{{/if}}
              </div>
              <div class="dev-card-footer">
                <span class="dev-card-exp">{{yearsOfExperience}} years exp.</span>
                <span class="dev-card-rate">${{hourlyRate}}<span>/hr</span></span>
              </div>
              <a href="/developer/{{slug}}" class="dev-card-btn">View Profile</a>
            </div>
          </article>
          {{/each}}
        </div>
        {{else}}
        <div class="dev-empty">
          <div class="dev-empty-icon">üòï</div>
          <h3>No developers found</h3>
          <p>We couldn't find any developers matching your criteria. Try adjusting your filters.</p>
          <a href="/hire-developer" class="dev-filter-btn" style="display:inline-block;width:auto;padding:12px 24px;">Clear All Filters</a>
        </div>
        {{/if}}
      </div>
    </div>
  </div>

  <section class="dev-cta">
    <h2>Are You a Developer?</h2>
    <p>Join our marketplace and connect with clients looking for your skills. Set your own rates and grow your career.</p>
    <div class="dev-cta-btns">
      <a href="/admin/dev-marketplace/apply" class="dev-cta-btn primary">Apply as Developer</a>
      <a href="/developer-marketplace" class="dev-cta-btn secondary">Learn More</a>
    </div>
  </section>
</div>

<script>
  function addSkill(skill) {
    const input = document.querySelector('input[name="skills"]');
    const current = input.value.trim();
    if (current) {
      if (!current.toLowerCase().includes(skill.toLowerCase())) {
        input.value = current + ', ' + skill;
      }
    } else {
      input.value = skill;
    }
  }

  function updateSort(value) {
    const url = new URL(window.location.href);
    url.searchParams.set('sortBy', value);
    window.location.href = url.toString();
  }
</script>

