<script>
(function() {
  // Toggle module sections (event delegation)
  document.querySelectorAll('.curriculum-list').forEach(function(list) {
    list.addEventListener('click', function(e) {
      var header = e.target.closest('.module-header');
      if (!header) return;
      var lessons = header.nextElementSibling;
      var toggle = header.querySelector('.module-toggle');
      if (lessons.classList.contains('open')) {
        lessons.classList.remove('open');
        toggle.textContent = '‚ñ∂';
      } else {
        lessons.classList.add('open');
        toggle.textContent = '‚ñº';
      }
    });
  });

  function showToast(message, type) {
    var toast = document.createElement('div');
    toast.textContent = message;
    toast.style.cssText = 'position:fixed;top:20px;right:20px;padding:1rem 1.5rem;border-radius:8px;z-index:9999;font-weight:500;animation:slideIn 0.3s ease;color:white;';
    toast.style.background = type === 'success' ? '#10b981' : type === 'error' ? '#ef4444' : '#3b82f6';
    document.body.appendChild(toast);
    setTimeout(function() { toast.remove(); }, 3000);
  }

  function getAuthHeaders() {
    var token = localStorage.getItem('token');
    return token ? { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' } : { 'Content-Type': 'application/json' };
  }

  // Free course - Enroll button
  var enrollBtn = document.getElementById('enrollBtn');
  if (enrollBtn) {
    enrollBtn.addEventListener('click', async function() {
      var courseId = enrollBtn.dataset.courseId;
      var token = localStorage.getItem('token');

      if (!token) {
        window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
        return;
      }

      enrollBtn.disabled = true;
      enrollBtn.textContent = 'Enrolling...';

      try {
        var r = await fetch('/api/lms/enroll/' + courseId, {
          method: 'POST',
          credentials: 'include',
          headers: getAuthHeaders()
        });
        if (r.status === 401) {
          window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
          return;
        }
        var data = await r.json().catch(function() { return {}; });
        if (!r.ok) {
          throw new Error(data.message || 'Enrollment failed');
        }
        showToast('Successfully enrolled! Redirecting to course...', 'success');
        setTimeout(function() {
          window.location.href = '/learn/' + courseId;
        }, 1500);
      } catch(e) {
        enrollBtn.disabled = false;
        enrollBtn.textContent = 'üöÄ Enroll Now - Free';
        showToast(e.message || 'Enrollment failed. Please try again.', 'error');
      }
    });
  }

  // Paid course - Add to Cart button
  var addToCartBtn = document.getElementById('addToCartBtn');
  if (addToCartBtn) {
    addToCartBtn.addEventListener('click', async function() {
      var courseId = addToCartBtn.dataset.courseId;
      var token = localStorage.getItem('token');

      if (!token) {
        window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
        return;
      }

      var originalText = addToCartBtn.textContent;
      addToCartBtn.disabled = true;
      addToCartBtn.textContent = 'Adding to cart...';

      try {
        var r = await fetch('/api/shop/cart/add-course', {
          method: 'POST',
          credentials: 'include',
          headers: getAuthHeaders(),
          body: JSON.stringify({ courseId: courseId })
        });
        if (r.status === 401) {
          window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
          return;
        }
        var data = await r.json().catch(function() { return {}; });
        if (!r.ok) {
          throw new Error(data.message || 'Failed to add to cart');
        }
        showToast('Course added to cart! Complete your purchase to access the course.', 'success');
        setTimeout(function() {
          window.location.href = '/cart';
        }, 1500);
      } catch(e) {
        addToCartBtn.disabled = false;
        addToCartBtn.textContent = originalText;
        showToast(e.message || 'Failed to add to cart. Please try again.', 'error');
      }
    });
  }
})();
</script>

