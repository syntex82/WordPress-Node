{{> header}}

<style>
  .pricing-page {
    background: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);
    min-height: 100vh;
    padding: 100px 20px 80px;
  }
  .pricing-container {
    max-width: 1400px;
    margin: 0 auto;
  }
  .pricing-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  .pricing-header h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #fff;
    margin-bottom: 0.75rem;
  }
  .pricing-header p {
    color: #94a3b8;
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
  }
  .plans-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.25rem;
    margin: 0 auto;
  }
  .plan-card {
    background: rgba(30, 41, 59, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 1.75rem;
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  .plan-card:hover {
    border-color: rgba(99, 102, 241, 0.5);
    transform: translateY(-4px);
  }
  .plan-card.featured {
    border-color: #10b981;
    box-shadow: 0 0 30px rgba(16, 185, 129, 0.3);
  }
  .plan-card.business {
    border-color: #6366f1;
    box-shadow: 0 0 30px rgba(99, 102, 241, 0.3);
  }
  .plan-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
  }
  .plan-card.business .plan-badge {
    background: linear-gradient(135deg, #6366f1, #4f46e5);
  }
  .plan-role {
    display: inline-block;
    padding: 4px 10px;
    background: rgba(255,255,255,0.1);
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 600;
    color: #94a3b8;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.75rem;
  }
  .plan-card.featured .plan-role { background: rgba(16, 185, 129, 0.2); color: #10b981; }
  .plan-card.business .plan-role { background: rgba(99, 102, 241, 0.2); color: #6366f1; }
  .plan-name {
    font-size: 1.4rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.5rem;
  }
  .plan-description {
    color: #94a3b8;
    font-size: 0.85rem;
    margin-bottom: 1.25rem;
    line-height: 1.5;
  }
  .plan-price {
    margin-bottom: 1.25rem;
  }
  .plan-price .amount {
    font-size: 2.5rem;
    font-weight: 800;
    color: #fff;
  }
  .plan-price .currency {
    font-size: 1.25rem;
    color: #64748b;
    vertical-align: top;
  }
  .plan-price .period {
    color: #64748b;
    font-size: 0.9rem;
  }
  .plan-features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
    flex: 1;
  }
  .plan-features li {
    padding: 0.4rem 0;
    color: #cbd5e1;
    display: flex;
    align-items: flex-start;
    gap: 0.6rem;
    font-size: 0.85rem;
    line-height: 1.4;
  }
  .plan-features li .check {
    color: #10b981;
    font-weight: bold;
    flex-shrink: 0;
  }
  .btn-plan {
    display: block;
    width: 100%;
    padding: 12px 20px;
    background: linear-gradient(135deg, #6366f1, #4f46e5);
    color: white;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 600;
    text-align: center;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 0.95rem;
  }
  .btn-plan:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(99, 102, 241, 0.4);
  }
  .btn-plan.free {
    background: rgba(255, 255, 255, 0.1);
  }
  .btn-plan.free:hover {
    background: rgba(255, 255, 255, 0.2);
  }
  .btn-plan.pro {
    background: linear-gradient(135deg, #10b981, #059669);
  }
  .btn-plan.pro:hover {
    box-shadow: 0 4px 20px rgba(16, 185, 129, 0.4);
  }
  .plan-yearly {
    text-align: center;
    margin-top: 0.75rem;
    font-size: 0.8rem;
    color: #64748b;
  }
  .plan-yearly strong {
    color: #10b981;
  }
  .comparison-section {
    margin-top: 4rem;
    text-align: center;
  }
  .comparison-section h2 {
    color: #fff;
    font-size: 1.75rem;
    margin-bottom: 2rem;
  }
  .faq-section {
    margin-top: 4rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  .faq-section h2 {
    color: #fff;
    text-align: center;
    margin-bottom: 2rem;
  }
  .faq-item {
    background: rgba(30, 41, 59, 0.6);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 12px;
    padding: 1.25rem;
    margin-bottom: 1rem;
  }
  .faq-item h3 {
    color: #fff;
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }
  .faq-item p {
    color: #94a3b8;
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
  }
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: rgba(30, 41, 59, 0.6);
    border-radius: 16px;
  }
  .empty-state h2 { color: #fff; margin-bottom: 0.5rem; }
  .empty-state p { color: #94a3b8; }
  @media (max-width: 1200px) {
    .plans-grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 768px) {
    .pricing-page { padding-top: 80px; }
    .pricing-header h1 { font-size: 2rem; }
    .plans-grid { grid-template-columns: 1fr; max-width: 400px; }
  }
</style>

