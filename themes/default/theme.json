{
  "name": "Default Theme",
  "version": "1.1.0",
  "author": "NodePress",
  "description": "A clean, modern default theme for NodePress CMS with PWA support, real-time messaging, and video calling",
  "license": "MIT",
  "templates": [
    "home",
    "single-post",
    "single-page",
    "archive",
    "shop",
    "single-product",
    "cart",
    "checkout",
    "courses",
    "single-course",
    "login",
    "register",
    "my-account",
    "hire-developer",
    "developer-marketplace",
    "developer-profile"
  ],
  "settings": {
    "colors": {
      "primary": "#667eea",
      "secondary": "#764ba2",
      "accent": "#FF6B6B",
      "background": "#ffffff",
      "text": "#333333"
    },
    "typography": {
      "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif",
      "fontSize": {
        "base": "16px",
        "heading": "42px"
      }
    },
    "spacing": {
      "padding": "40px",
      "margin": "2rem"
    }
  },
  "features": [
    "responsive",
    "dark-mode-ready",
    "customizable-colors",
    "customizable-typography",
    "pwa-ready",
    "service-worker",
    "offline-support",
    "installable-app",
    "real-time-messaging",
    "media-sharing",
    "video-calling"
  ]
}

