// Simple confetti effect
(function() {
  var colors = ['#10b981', '#8b5cf6', '#6366f1', '#f59e0b', '#ec4899'];
  for (var i = 0; i < 50; i++) {
    var confetti = document.createElement('div');
    confetti.style.cssText = 'position:fixed;width:10px;height:10px;background:' + colors[i % 5] + ';' +
      'left:' + Math.random() * 100 + '%;top:-10px;border-radius:50%;pointer-events:none;z-index:1000;' +
      'animation:fall ' + (2 + Math.random() * 2) + 's ease-out forwards;animation-delay:' + (Math.random() * 0.5) + 's;';
    document.body.appendChild(confetti);
    setTimeout(function(el) { el.remove(); }.bind(null, confetti), 4000);
  }
  var style = document.createElement('style');
  style.textContent = '@keyframes fall { to { transform: translateY(100vh) rotate(720deg); opacity: 0; } }';
  document.head.appendChild(style);
})();
</script>
