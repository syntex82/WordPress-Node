          <h3><a href="/courses/{{slug}}">{{title}}</a></h3>
          <p>{{shortDescription}}</p>
          <div class="content-card-footer">
            <span class="content-card-price">{{#if (eq priceType 'FREE')}}Free{{else}}${{price}}{{/if}}</span>
            <span class="content-card-meta">{{level}}</span>
          </div>
        </div>
      </article>
      {{/each}}
    </div>
    <div style="text-align: center; margin-top: 2rem;">
      <a href="/courses" class="btn btn-outline">View All Courses ‚Üí</a>
    </div>
  </div>
</section>
{{/if}}

