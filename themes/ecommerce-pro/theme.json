  "thumbnail": "/themes/ecommerce-pro/screenshot.png",
  "designConfig": {
    "colors": {
      "primary": "#FF6B35",
      "secondary": "#004E89",
      "accent": "#F7931E",
      "background": "#FFFFFF",
      "surface": "#F8F9FA",
      "text": "#1A1A1A",
