{{> header}}

<div class="checkout-container" style="max-width: 1200px; margin: 0 auto; padding: 40px;">
  <h1 style="font-size: 32px; margin-bottom: 2rem;">Checkout</h1>

  <div style="display: grid; grid-template-columns: 1fr 350px; gap: 2rem;">
    <!-- Checkout Form -->
    <form style="background: white; padding: 2rem; border-radius: 12px; border: 1px solid #E9ECEF;">
      <!-- Shipping Address -->
      <div style="margin-bottom: 2rem;">
        <h2 style="font-size: 20px; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 2px solid #FF6B35;">
          1. Shipping Address
        </h2>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
          <input type="text" placeholder="First Name" style="padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px;" required>
          <input type="text" placeholder="Last Name" style="padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px;" required>
        </div>

        <input type="email" placeholder="Email Address" style="width: 100%; padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px; margin-bottom: 1rem;" required>
        <input type="text" placeholder="Street Address" style="width: 100%; padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px; margin-bottom: 1rem;" required>

        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
          <input type="text" placeholder="City" style="padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px;" required>
          <input type="text" placeholder="State" style="padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px;" required>
          <input type="text" placeholder="ZIP Code" style="padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px;" required>
        </div>

        <input type="text" placeholder="Country" style="width: 100%; padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px;" required>
      </div>

      <!-- Shipping Method -->
      <div style="margin-bottom: 2rem;">
        <h2 style="font-size: 20px; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 2px solid #FF6B35;">
          2. Shipping Method
        </h2>

        <div style="display: flex; flex-direction: column; gap: 1rem;">
          <label style="display: flex; align-items: center; padding: 1rem; border: 1px solid #E9ECEF; border-radius: 4px; cursor: pointer; transition: all 0.3s ease;" onmouseover="this.style.background='#F8F9FA'" onmouseout="this.style.background='white'">
            <input type="radio" name="shipping" value="standard" checked style="cursor: pointer; margin-right: 1rem;">
            <div style="flex: 1;">
              <div style="font-weight: 600;">Standard Shipping (5-7 days)</div>
              <div style="color: #6C757D; font-size: 14px;">Free</div>
            </div>
          </label>

          <label style="display: flex; align-items: center; padding: 1rem; border: 1px solid #E9ECEF; border-radius: 4px; cursor: pointer; transition: all 0.3s ease;" onmouseover="this.style.background='#F8F9FA'" onmouseout="this.style.background='white'">
            <input type="radio" name="shipping" value="express" style="cursor: pointer; margin-right: 1rem;">
            <div style="flex: 1;">
              <div style="font-weight: 600;">Express Shipping (2-3 days)</div>
              <div style="color: #6C757D; font-size: 14px;">$15.00</div>
            </div>
          </label>

          <label style="display: flex; align-items: center; padding: 1rem; border: 1px solid #E9ECEF; border-radius: 4px; cursor: pointer; transition: all 0.3s ease;" onmouseover="this.style.background='#F8F9FA'" onmouseout="this.style.background='white'">
            <input type="radio" name="shipping" value="overnight" style="cursor: pointer; margin-right: 1rem;">
            <div style="flex: 1;">
              <div style="font-weight: 600;">Overnight Shipping (Next day)</div>
              <div style="color: #6C757D; font-size: 14px;">$35.00</div>
            </div>
          </label>
        </div>
      </div>

      <!-- Payment Method -->
      <div style="margin-bottom: 2rem;">
        <h2 style="font-size: 20px; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 2px solid #FF6B35;">
          3. Payment Method
        </h2>

        <div style="display: flex; flex-direction: column; gap: 1rem;">
          <label style="display: flex; align-items: center; padding: 1rem; border: 1px solid #E9ECEF; border-radius: 4px; cursor: pointer; background: #F8F9FA;">
            <input type="radio" name="payment" value="card" checked style="cursor: pointer; margin-right: 1rem;">
            <span style="font-weight: 600;">Credit/Debit Card</span>
          </label>

          <div style="padding: 1rem; background: #F8F9FA; border-radius: 4px;">
            <input type="text" placeholder="Card Number" style="width: 100%; padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px; margin-bottom: 1rem;" required>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
              <input type="text" placeholder="MM/YY" style="padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px;" required>
              <input type="text" placeholder="CVC" style="padding: 10px; border: 1px solid #E9ECEF; border-radius: 4px;" required>
            </div>
          </div>

          <label style="display: flex; align-items: center; padding: 1rem; border: 1px solid #E9ECEF; border-radius: 4px; cursor: pointer; transition: all 0.3s ease;" onmouseover="this.style.background='#F8F9FA'" onmouseout="this.style.background='white'">
            <input type="radio" name="payment" value="paypal" style="cursor: pointer; margin-right: 1rem;">
            <span style="font-weight: 600;">PayPal</span>
          </label>
        </div>
      </div>

      <button type="submit" style="
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #FF6B35 0%, #E55A2B 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
      " onmouseover="this.style.transform='scale(1.02)'" onmouseout="this.style.transform='scale(1)'">
        Complete Purchase
      </button>
    </form>

    <!-- Order Summary -->
    <div class="cart-summary">
      <h3 style="margin-bottom: 1.5rem; font-size: 18px;">Order Summary</h3>

      <div style="max-height: 300px; overflow-y: auto; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 1px solid #E9ECEF;">
        {{#each cartItems}}
          <div style="display: flex; justify-content: space-between; margin-bottom: 1rem; font-size: 14px;">
            <span>{{this.name}} x {{this.quantity}}</span>
            <span>${{multiply this.price this.quantity}}</span>
          </div>
        {{/each}}
      </div>

      <div class="summary-row">
        <span>Subtotal</span>
        <span>${{cartSubtotal}}</span>
      </div>

      <div class="summary-row">
        <span>Shipping</span>
        <span>${{shippingCost}}</span>
      </div>

      <div class="summary-row">
        <span>Tax</span>
        <span>${{taxAmount}}</span>
      </div>

      <div class="summary-row total">
        <span>Total</span>
        <span>${{cartTotal}}</span>
      </div>

      <div style="background: #E8F5E9; padding: 1rem; border-radius: 8px; color: #28A745; font-size: 14px; text-align: center;">
        âœ“ Secure checkout powered by Stripe
      </div>
    </div>
  </div>
</div>

{{> footer}}

