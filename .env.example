# ═══════════════════════════════════════════════════════════════════════════
# 🗄️ DATABASE (required)
# ═══════════════════════════════════════════════════════════════════════════
DATABASE_URL="postgresql://user:password@localhost:5432/wordpress_node?schema=public"

# ═══════════════════════════════════════════════════════════════════════════
# 🌐 APPLICATION
# ═══════════════════════════════════════════════════════════════════════════
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# ═══════════════════════════════════════════════════════════════════════════
# 🔐 AUTHENTICATION (required)
# ═══════════════════════════════════════════════════════════════════════════
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ═══════════════════════════════════════════════════════════════════════════
# 👤 ADMIN ACCOUNT (required for seeding)
# ═══════════════════════════════════════════════════════════════════════════
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# ═══════════════════════════════════════════════════════════════════════════
# 📁 FILE UPLOAD
# ═══════════════════════════════════════════════════════════════════════════
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ═══════════════════════════════════════════════════════════════════════════
# 🌍 SITE CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════
SITE_NAME=WordPress Node
SITE_DESCRIPTION=A modern CMS built with Node.js
ACTIVE_THEME=default

# ═══════════════════════════════════════════════════════════════════════════
# 📧 EMAIL / SMTP (optional - required for sending emails)
# ═══════════════════════════════════════════════════════════════════════════
# Gmail Example (use App Password - https://myaccount.google.com/apppasswords)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com
SMTP_FROM_NAME=WordPress Node CMS

# ═══════════════════════════════════════════════════════════════════════════
# 💳 STRIPE PAYMENTS (optional - required for e-commerce)
# ═══════════════════════════════════════════════════════════════════════════
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ═══════════════════════════════════════════════════════════════════════════
# 🤖 AI THEME DESIGNER (optional)
# ═══════════════════════════════════════════════════════════════════════════
# Provider: 'openai' or 'anthropic'
AI_PROVIDER=openai
# Get OpenAI key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxx
# Get Anthropic key from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxx
# Rate limiting (max requests per window)
AI_RATE_LIMIT=10
AI_RATE_LIMIT_WINDOW=3600
