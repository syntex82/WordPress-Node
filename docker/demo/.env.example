# NodePress Demo System Environment Variables

# Database
POSTGRES_USER=nodepress
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379

# Demo Configuration
DEMO_BASE_DOMAIN=demo.nodepress.io
MAX_CONCURRENT_DEMOS=20
DEFAULT_DEMO_HOURS=24
MAX_DEMO_HOURS=72

# Email (for demo notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@nodepress.io
SMTP_PASS=your_smtp_password
SMTP_FROM=NodePress <noreply@nodepress.io>

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# SSL (optional - for production)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_AI_FEATURES=false
ENABLE_PAYMENT_SIMULATION=true

